# VisionFlow Pro GCP Deployment Configuration

# Project Configuration
PROJECT_ID=visionflow-pro-$(date +%s)
PROJECT_NAME=VisionFlow Pro
REGION=us-central1
ZONE=us-central1-a

# Service Configuration
SERVICE_NAME=visionflow-api
IMAGE_NAME=visionflow-pro
REPOSITORY=visionflow-repo

# Database Configuration
DATABASE_INSTANCE=visionflow-db
DATABASE_NAME=visionflow
DATABASE_USER=visionflow_user

# Storage Configuration
STORAGE_BUCKET=visionflow-storage-$(date +%s)
MODELS_BUCKET=visionflow-models-$(date +%s)

# API Configuration
API_VERSION=v1
API_PORT=8080
STREAMLIT_PORT=8501

# Machine Configuration
MACHINE_TYPE=e2-standard-4
ACCELERATOR_TYPE=nvidia-tesla-t4
ACCELERATOR_COUNT=1

# Monitoring Configuration
MONITORING_SERVICE=visionflow-monitoring
LOGGING_SERVICE=visionflow-logging

# Security Configuration
SERVICE_ACCOUNT=visionflow-service-account
API_KEY_NAME=visionflow-api-key